VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all clean
all:	librustcorefoundation.dummy

librustcorefoundation.dummy: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --lib --out-dir .
	touch $@

rustcorefoundation-test: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: rustcorefoundation-test
	./rustcorefoundation-test

clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy rustcorefoundation-test

